<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "hashtag">
	<resultMap type="hashtagDto" id="hashtagMap">
		<result property="hash_num" column="HASH_NUM"/>
		<result property="board_num" column="BOARD_NUM"/>
		<result property="table_num" column="TABLE_NUM"/>
		<result property="group_num" column="GROUP_NUM"/>
		<result property="hash_content" column="HASH_CONTENT"/>
	</resultMap>
	
	<select id="selectList" resultMap="hashtagMap" parameterType="int">
		SELECT *
		FROM OLLE_HASHTAG
		WHERE BOARD_NUM=#{board_num}
	</select>
	
	<select id="selectOne" resultType="hashtagDto" parameterType="hashtagDto">
		SELECT *
		FROM OLLE_HASHTAG
		WHERE BOARD_NUM=#{board_num} AND TABLE_NUM=#{table_num}		
	</select>
	
	<insert id="insert" parameterType="hashtagDto">
		INSERT INTO OLLE_HASHTAG
		VALUES(HASHSEQ.NEXTVAL, #{board_num},#{table_num},'0',#{hash_content})
	</insert>
	
	<update id="update" parameterType="hashtagDto">
		UPDATE OLLE_HASHTAG
		SET HASH_CONTENT=#{hash_content}
		WHERE BOARD_NUM=#{board_num} AND TABLE_NUM=#{table_num}
	</update>
	
	<delete id="delete" parameterType="int">
		DELETE FROM OLLE_HASHTAG
		WHERE HASH_NUM = #{hash_num}
	</delete>
</mapper>